<section>
  <div class="container">
    <a href="/product-dashboard" class="btn btn-primary px-3 mt-5"><i class="fa-solid fa-shop"></i> Dashboard</a>
    <a href="/shop" class="btn btn-success px-3 mt-5"><i class="fa-regular fa-eye"></i> View Store</a>

    <!-- page content here -->
    <div class="page-content mt-3 border p-4 rounded shadow-sm">
      <form action="">
        <div class="form-header">
          <h2 class="mb-3">Add product</h2>
        </div>

        <div class="form-floating mb-3">
          <input type="text" class="form-control" id="name" placeholder="Product name" />
          <label for="name">Product name</label>
        </div>

        <div class="row">
          <div class="col-lg-4">
            <div class="form-floating">
              <input type="text" class="form-control" id="regular-price" placeholder="Regula price" />
              <label for="regular-price">Regular price</label>
            </div>
          </div>
          <div class="col-lg-4">
            <div class="form-floating">
              <input type="password" class="form-control" id="sale-price" placeholder="Sale price" />
              <label for="sale-price">Sale price</label>
            </div>
          </div>
          <div class="col-lg-4">
            <div class="form-floating">
              <input type="password" class="form-control" id="stock" placeholder="Stock" />
              <label for="stock">Stock</label>
            </div>
          </div>
        </div>

        <div class="row mt-3">
          <div class="col-lg-8">
            <div class="form-floating">
              <textarea class="form-control" placeholder="Product discription" id="product-discription" style="height: 395px"></textarea>
              <label for="product-discription">Product discription</label>
              <button class="btn btn-primary mt-3" style="width: 100%" type="submit">Add product</button>
            </div>
          </div>

          <div class="col-lg-4">
            <div class="product-image-box">
              <img class="img-thumbnail img-fluid" src="assets/img/placeholder.png" alt="" />
              <button class="remove-product-image btn btn-danger btn-sm"><i class="fa-solid fa-trash"></i></button>
            </div>
            <input type="file" name="product-image" class="form-control mt-3" />
          </div>
        </div>
      </form>
    </div>
  </div>
</section>
